<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Dreamcatcher" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_app_blue</item>
        <item name="colorPrimaryVariant">@color/primary_app_blue_dark</item>
        <item name="colorOnPrimary">@color/on_primary_white</item>

        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorSecondaryVariant">@color/accent_light_blue</item>
        <item name="colorOnSecondary">@color/text_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/background_light</item>

        <item name="android:buttonStyle">@style/AppButton</item>
        <item name="materialButtonStyle">@style/AppButton</item>

        <item name="editTextStyle">@style/AppEditText</item>

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
        <item name="android:buttonBarButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

    <style name="AlertDialogStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:background">@color/card_background</item>
        <item name="android:textColorAlertDialogListItem">@color/text_dark</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogNegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/on_primary_white</item>
        <item name="android:backgroundTint">@color/primary_app_blue</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="AppButton.Delete" parent="AppButton">
        <item name="android:backgroundTint">@color/button_action_red</item>
        <item name="android:textColor">@color/on_primary_white</item>
    </style>

    <style name="AppButton.Save" parent="AppButton">
        <item name="android:backgroundTint">@color/button_action_green</item>
        <item name="android:textColor">@color/on_primary_white</item>
    </style>

    <style name="AppButton.Change" parent="AppButton">
        <item name="android:backgroundTint">@color/button_action_purple</item>
        <item name="android:textColor">@color/on_primary_white</item>
    </style>

    <style name="AppButton.Info" parent="AppButton">
        <item name="android:backgroundTint">@color/button_info_background</item>
        <item name="android:textColor">@color/button_info_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">@color/card_background</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>